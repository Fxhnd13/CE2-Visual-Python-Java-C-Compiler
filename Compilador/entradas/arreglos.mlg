%%VB
Public Function Incremento(Valor as Integer) as integer
  Valor = Valor + 1
  Return Valor
End Function

%%JAVA

%%PY
def Mensaje(tipo):
    if tipo = 1:
        print("Arreglo antes de ordenarse\n")
    elif tipo = 2:
        print("Arreglo depues de ordenarse\n")
    else:
        print("default\n")

def Mostrar(indice, valor):
    print("arreglo[", indice, "] = ",valor,"\n")

